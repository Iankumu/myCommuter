<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:shrinkColumns="0">

    <TableRow>

        <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/taskcardviewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:checkable="true"
            android:clickable="true"

            android:focusable="true"
            android:foreground="@android:color/holo_red_light"
            android:orientation="vertical"
            android:requiresFadingEdge="horizontal"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:shapeAppearance="@style/ShapeAppearance.MyApp.MediumComponent"
            card_view:cardBackgroundColor="@color/shimmer_color"
            card_view:cardElevation="7dp"
            card_view:contentPadding="10dp"
            card_view:rippleColor="@color/colorPrimary"
            card_view:state_dragged="true">


            <LinearLayout
                android:id="@+id/linearcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:transitionName="@string/cardslidin">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="?attr/textAppearanceHeadline3"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textSize="12sp" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </TableRow>
</TableLayout>